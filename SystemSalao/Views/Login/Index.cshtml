@{
    ViewData["Title"] = "Login";
}

<div class="nome-salao container text-center">
    <div class="row">
        <div class="col-md-2 text-white">
            <i class="fas fa-laugh-beam"></i>
        </div>

        <div class="col-md-10 text-white">
            <div class="row">
                <span class="col-md-12"> System Salão</span>
                <p class="col-md-12">Faça logon ou crie uma conta</p>
            </div>
        </div>
    </div>
  

</div>

<div class="form-login text-center">
    <!-- <h1 class="display-4">Welcome</h1>
        <p>Learn about <a href="https://docs.microsoft.com/aspnet/core">building Web apps with ASP.NET Core</a>.</p>-->
    <form class="form-signin">
        <i class="fas fa-user-circle"></i>
        <h1 class="h3 mb-3 font-weight-normal">Fazer logon</h1>
        <label for="inputEmail" class="sr-only">Endereço de email</label>
        <input type="email" id="inputEmail" class="form-control" placeholder="Endereço de email" required autofocus>
        <label for="inputPassword" class="sr-only">Senha</label>
        <input type="password" id="inputPassword" class="form-control" placeholder="Senha" required>
        <div class="checkbox mb-3">
            <label>
                <input type="checkbox" value="remember-me"> Remember me
            </label>
        </div>
        <button class="btn btn-lg btn-primary btn-block" type="submit">Entrar</button>
        <p class="mt-5 mb-3 text-muted">Novo usuário? <a href="#">Crie uma conta</a></p>
    </form>

</div>
   
